// extends default
block content
	doctype html
html
	head
		meta( charaset="utf-8")
		link( rel="stylesheet", type="text/css", href="css/styles.css")
	body
		script( type="text/javascript" ).
		div( class="admin-form" )
			input( type="hidden", name="username", value='#{username}')
			input( type="hidden", name="password", value='#{password}')
			h1 Admin Site
		div( class="admin-form" )
			h2 Create Table
			form( action="/admin/create/table", method="POST", enctype="multipart/form-data" )
				input( name="tablename", type="text", placeholder="setname_location_type" )
				input( name="colums", type="text", placeholder="col1 CHAR(<INT>), col2 INT ...2 INT ", required )
				input( type="submit", value="Create New Table" )
		div( class="admin-form" )
			h2 Upload File
			form( action="/admin/upload", method="POST", enctype="multipart/form-data" )
				select( name="type", required )
					option( value="None" ) -- Select Data type --
					option( value="ANS_SnowDepth.csv" ) Abisko Snow Depth Data
					option( value="ANS_Temp_Prec.csv" ) Abisko Temperature and Precipitation Data
					option( value="Tornetrask_islaggning_islossning.csv" ) TorneTr√§sk Freeze-up and Break-up data
				input( type="file" , name="file", required)
				input( type="submit", value="Upload File" )
